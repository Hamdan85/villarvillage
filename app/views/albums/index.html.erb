<h1>Listing <%= @artist.name %>'s albums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Releasedate</th>
    <th>Cover</th>
    <th>Artist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.name %></td>
    <td><%= album.releasedate %></td>
    <td><%= image_tag album.cover.url %></td>
    <td><%= link_to 'Show', artist_album_path(@artist,album) %></td>
    <% if !current_user.nil? %>
        <td><%= link_to 'Edit', edit_artist_album_path(@artist,album) %></td>
        <td><%= link_to 'Destroy', artist_album_path(@artist,album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if !current_user.nil? %>
    <%= link_to 'New Album', new_artist_album_path(@artist) %> |
<% end %>
<%= link_to "Back to Artist's", @artist  %>
