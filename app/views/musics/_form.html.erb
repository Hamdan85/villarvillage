        <%= f.label :genre %><br />
        <%= f.text_field :genre %>
      </div>
      <div class="large-4">
        <%= f.label :duration %><br />
        <%= f.time_select :duration, {
                :order => [:minute, :second],
        },
                          {
                                  :class => "large-5 column custom"
                          } %>
      </div>
      <!--  Dont want music cover right now
      <div>
