<div class="row">
  <div class="large-12">
    <h1>Últimas Notícias</h1>

    <% @newlatests.each do |newlatest| %>
        <div class="news">
          <%= link_to newlatest do %>
              <div class="eachnew">
                <h5><%= newlatest.title %></h5>
                <p><%= newlatest.content.html_safe %></p>
              </div>
          <% end %>
          <% if !current_user.nil? %>
              <%= link_to 'Edit', edit_newlatest_path(newlatest) %>
              <%= link_to 'Destroy', newlatest, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
    <% end %>

    <% if !current_user.nil? %>
        <%= link_to 'Adicionar Notícia', new_newlatest_path, :class => 'button expand' %>
    <% end %>
  </div>
</div>